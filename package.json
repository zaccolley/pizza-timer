{
  "private": true,
  "name": "pizza-timer",
  "version": "3.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --no-service-worker --clean --json",
    "postbuild": "npm run handle-service-worker",
    "handle-service-worker": "mv stats.json build/stats.json && cp service-worker.js build/service-worker.js && node add-content-to-service-worker.js",
    "serve": "npm run build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.7.0",
    "if-env": "^1.0.0",
    "preact-cli": "^2.0.0",
    "prettier": "1.17.0",
    "replace-in-file": "^3.4.4"
  },
  "dependencies": {
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0"
  }
}
